<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="kantor.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <Button
                x:Name="CounterBtn"
                Text="Pobierz kurs"
                Clicked="OnCounterClicked"
                HorizontalOptions="Fill" />

            <Entry x:Name="btcEntry" Placeholder="Wprowadź ilość BTC" Keyboard="Numeric" />

            <Button
                x:Name="CalculateBtn"
                Text="Przelicz na inne waluty"
                Clicked="OnCalculateClicked"
                HorizontalOptions="Fill" />

            <Label x:Name="plnLabel" Text="PLN: " />
            <Label x:Name="usdLabel" Text="USD: " />
            <Label x:Name="gbpLabel" Text="GBP: " />
            <Label x:Name="eurLabel" Text="EUR: " />

            <Label x:Name="plnResultLabel" Text="Przeliczenie na PLN: " />
            <Label x:Name="usdResultLabel" Text="Przeliczenie na USD: " />
            <Label x:Name="gbpResultLabel" Text="Przeliczenie na GBP: " />
            <Label x:Name="eurResultLabel" Text="Przeliczenie na EUR: " />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
