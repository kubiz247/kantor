<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="kantor.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Button
                x:Name="CounterBtn"
                Text="Button" 
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="OnCounterClicked"
                HorizontalOptions="Fill" />
            <Label x:Name="cLabel" Text=""/>
            <HorizontalStackLayout>
                <DatePicker x:Name="dpData" MinimumDate="2003-01-01">
                    
                </DatePicker>
                <DatePicker x:Name="dpData2" MinimumDate="2003-01-01">

                </DatePicker>
            </HorizontalStackLayout>

            <HorizontalStackLayout>
                <Image WidthRequest="100" HeightRequest="100" Source="dolar.jpg">
                    
                </Image>
                <Image WidthRequest="100" HeightRequest="100" Source="funt.jpg">

                </Image>
                <Image WidthRequest="100" HeightRequest="100" Source="euro.jpg">

                </Image>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>